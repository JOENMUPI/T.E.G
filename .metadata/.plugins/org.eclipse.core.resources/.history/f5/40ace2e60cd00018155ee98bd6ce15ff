package LB;

import java.util.Calendar;

public class TicketTime {
	private int h,min,seg, mil;
	private double code;
	
	public void setH(int h) { this.h = h; }
	public void setMin(int min) { this.min = min; }
	public void setSeg(int seg) { this.seg = seg; }
	public void setMil(int mil) { this.mil = mil; }
	public int getH() { return h; }
	public int getMin() { return min; }
	public int getSeg() { return seg; }
	public int getMil() { return mil; }
	private double createCode() { this.code = (h + min + seg + mil) * Math.random(); return code; }
	public void initialCaptureTime() {
		this.h =  Calendar.getInstance().get(Calendar.HOUR_OF_DAY);
		this.min =  Calendar.getInstance().get(Calendar.MINUTE);
		this.seg =  Calendar.getInstance().get(Calendar.SECOND);
		this.mil =  Calendar.getInstance().get(Calendar.MILLISECOND);
	}
}