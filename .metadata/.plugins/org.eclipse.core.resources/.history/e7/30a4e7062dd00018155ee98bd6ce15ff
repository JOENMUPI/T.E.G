package LB;

import java.util.Calendar;

public class TicketTime {
	private int[] h = new int[2], min = new int[2], seg = new int[2], mil = new int[2];
	private double code;
	
	public double getCode() { return this.code; }
	public void initialCaptureTime() { this.captureTime(1); createCode(); }
	public void finalCaptureTime() { this.captureTime(2); }
	private void captureTime(int i) {
		this.h[i] =  Calendar.getInstance().get(Calendar.HOUR_OF_DAY);
		this.min[i] =  Calendar.getInstance().get(Calendar.MINUTE);
		this.seg[i] =  Calendar.getInstance().get(Calendar.SECOND);
		this.mil[i] =  Calendar.getInstance().get(Calendar.MILLISECOND);
	}
	
	private void createCode() { 
		this.code = h[0] * Math.random() + min[0] * Math.random() + seg[0] * Math.random() + mil[0] * Math.random(); 
	}
	
	public double getResult(){
		return ((this.h[1] - this.h[0]) * 3200) + ((this.min[1] - this.min[0]) * 60) + (this.seg[1] - this.seg[0]) + ((this.mil[1] - this.mil[0]) / 1000);
	}
}