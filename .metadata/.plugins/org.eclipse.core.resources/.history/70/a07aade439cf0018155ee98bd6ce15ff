package ORG;

import java.util.HashMap;

public class ProfileMap {
	private static HashMap<Integer, HashMap<String, HashMap<String, Boolean>>> profiles = new HashMap<Integer, HashMap<String, HashMap<String, Boolean>>>();;
	
	public HashMap<String, HashMap<String, Boolean>> getProfile(Integer profile) { return profiles.get(profile); }
	public void setProfile(Integer profile) {
		profiles.put(profile, new HashMap<String, HashMap<String, Boolean>>());
	}
	
	public void setObject(Integer profile, String object) {
		profiles.get(profile).put(object, new HashMap<String, Boolean>());
	}
	
	public void setMethod(Integer profile, String object, String method, Boolean bool) {
		profiles.get(profile).get(object).put(method, bool);
	}
	
	public HashMap<String, Boolean> getObject(Integer profile, String object) {
		return profiles.get(profile).get(object);
	}
	
	public Boolean getPerm(Integer profile, String object, String method) {
		return profiles.get(profile).get(object).get(method);
	}
}